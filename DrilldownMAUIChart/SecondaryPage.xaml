<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DrilldownMAUIChart"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Toolkit.Charts;assembly=Syncfusion.Maui.Toolkit"
             x:Class="DrilldownMAUIChart.SecondaryPage">


    <ContentPage.Background>
        <RadialGradientBrush Center="0.5,0.5"
                             Radius="0.9">
            <GradientStop Color="#FDE2F3"
                    Offset="0.0"/>
            <GradientStop Color="#B8E0F2"
                    Offset="1.0"/>
        </RadialGradientBrush>
    </ContentPage.Background>
    <Grid>
        
        <chart:SfCartesianChart x:Name="chart" Margin="50">
            <chart:SfCartesianChart.Title>
                <Label Text="{Binding ChartTitle}" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            </chart:SfCartesianChart.Title>
            <chart:SfCartesianChart.XAxes>
                <chart:CategoryAxis>
                    <chart:CategoryAxis.Title>
                        <chart:ChartAxisTitle Text="Year" />
                    </chart:CategoryAxis.Title>
                </chart:CategoryAxis>
            </chart:SfCartesianChart.XAxes>
            <chart:SfCartesianChart.YAxes>
                <chart:NumericalAxis>
                    <chart:NumericalAxis.Title>
                        <chart:ChartAxisTitle Text="Investment Value (USD Billion)" Margin="10"/>
                    </chart:NumericalAxis.Title>
                    <chart:NumericalAxis.LabelStyle>
                        <chart:ChartAxisLabelStyle LabelFormat="$0,,,B"/>
                    </chart:NumericalAxis.LabelStyle>
                </chart:NumericalAxis>
            </chart:SfCartesianChart.YAxes>

            <chart:ColumnSeries x:Name="series"
                                XBindingPath="Year"
                                YBindingPath="Value"
                                EnableTooltip="True"
                                ItemsSource="{Binding YearlyBreakdown}"/>

        </chart:SfCartesianChart>
    </Grid>
</ContentPage>